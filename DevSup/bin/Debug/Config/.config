<?xml version="1.0" encoding="utf-8"?>
<sqlMapConfig 
  xmlns="http://ibatis.apache.org/dataMapper" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!--iBATIS의 설정을 정의하는 루트 요소-->
  <settings>
    <!--SQL 문에서 네임스페이스 사용 여부-->
    <setting useStatementNamespaces="false"/>
  </settings>
  <!--데이터베이스 연결 정보를 정의하는 요소-->
  <database>
    <!--SQL 문에서 네임스페이스 사용 여부-->
    <provider name="oracleClient1.0"/>
    <dataSource name="default" connectionString="Data Source=SCSTG;User Id=XBIL;Password=X1234;"/>
  </database>
  <!--sqlMaps : SQL 매핑 파일을 정의하는 요소
       sqlMap : SQL 매핑 파일을 참조하는 요소 -->
  <sqlMaps>
    <sqlMap resource="./Sql/sql.xml" />
  </sqlMaps>
</sqlMapConfig>